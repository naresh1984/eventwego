<table width="100%" border="0">
  <tr>
    <td width="23%" valign="top"><table width="100%" border="0" cellspacing="10">
      <tr>
        <td width="12%"><%= image_tag('date.png') %></td>
        <td width="88%" class="searchhead">Calender</td>
      </tr>
      <tr align="left">
        <td colspan="2"  id="serachbg1"><ul>     
      <li><%= link_to "Event Calendar",calendar_path() %> </li>
     
    </ul></td>
        </tr>
    </table></td>
   
  </tr>

  <tr>
    <td width="23%" valign="top">


<table width="100%" border="0" cellspacing="10">
      <tr>
        <td width="12%"><%= image_tag('date.png') %></td>
        <td width="88%" class="searchhead">Date</td>
      </tr>
      <tr align="left">
        <td colspan="2"  id="serachbg1"><ul>
      <li class="active">All Dates (<%= @all_events %>)</li>
      <% if @today_count>0 %><li><%= check_box_tag 'dates[today]' , '1', false %><a>Today (<%= @today_count %>)</a></li><% end %>
      <% if @tomorrow_count>0 %><li><%= check_box_tag 'dates[tomorrow]' , '1', false %><a>Tomorrow (<%= @tomorrow_count %>)</a></li><% end %>
      <% if @thisweek_count>0 %><li><%= check_box_tag 'dates[thisweek]' , '1', false %><a>This Week (<%= @thisweek_count %>)</a></li><% end %>
      <% if @weekend_count>0 %><li><%= check_box_tag 'dates[thisweekend]' , '1', false %><a>This Weekend (<%= @weekend_count %>)</a></li><% end %>
      <% if @nextmonth_count>0 %><li><%= check_box_tag 'dates[nextmonth]' , '1', false %><a>Next Month (<%= @nextmonth_count %>)</a></li><% end %>
    
    </ul></td>
        </tr>
    </table> 
</td>
   
  </tr>
  <tr>
    <td valign="top"><table width="100%" border="0" cellspacing="10">
      <tr>
        <td width="12%"><%= image_tag('type.png') %></td>
        <td width="88%" class="searchhead">Type</td>
      </tr>
      <tr align="left">
        <td colspan="2"  id="serachbg1"><ul>
          <li class="active">All Types (<%=  @typecount %>)</li>
         <% @all_types.each do |type| %>
          <li><%= check_box_tag 'types[]' ,  type.event_type.id , false %><a><%= type.event_type.name.capitalize %> (<%= type.counts %>)</a></li>
         <% end %>
        </ul></td>
      </tr>
    </table></td>
    </tr>
  <tr>
    <td valign="top"><table width="100%" border="0" cellspacing="10">
      <tr>
        <td width="12%"><%= image_tag('location.png') %></td>
        <td width="88%" class="searchhead">Location</td>
      </tr>
      <tr align="left">
        <td colspan="2"  id="serachbg1"><ul>
            <li class="active">All Dates (<%=  @locount %>)</li>
           <% @all_location.each do |loc| %>
          <li><%= check_box_tag 'location[]' , loc.city , false %><a><%= loc.city.capitalize %> (<%= loc.counts %>)</a></li>
          <% end %>
        
        </ul></td>
      </tr>
    </table></td>
    </tr>
</table>



