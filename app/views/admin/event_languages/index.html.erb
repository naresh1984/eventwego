<table width="100%">
<tr>
<td class="pgtitle">Languages</td>
<td align="right"><%= link_to 'Add Language', new_admin_event_language_path,:class=>'linkbtn' %></td>
</tr>
</table>
 <% if notice %>
 <%= content_tag :div, :class => "alert alert-#{notice}" do %>
    <a class="close" data-dismiss="alert" href="#">Ã—</a>
    <%= notice %>
  <% end %>
  <% end %>
<table class="listtbl" cellpadding="1" cellspacing="1" width="100%" >
<tr class="header">  
<td width="7%">#</td>
<td width="57%">Name</td>
					
<td width="17%">Action</td>
</tr>	
<% i=1 %>
<% @event_languages.each do |lang| %>
<% rowclass = (i%2==0) ? 'roweven' : 'rowodd' %>
<tr class="<%= rowclass %>">
<td align="center"><%= i %></td>
<td><%= lang.name %></td>

<td align="center">
<%= link_to image_tag("admin/view.png") ,admin_event_language_path(lang) %>&nbsp;&nbsp;
<%= link_to image_tag("admin/edit.png") ,edit_admin_event_language_path(lang) %>&nbsp;&nbsp;
<%= link_to image_tag("admin/delete.png") ,admin_event_language_path(lang), method: :delete, data: { confirm: 'Are you sure ?' } %>
</td>
</tr>
 <% i+=1 %>
<% end %>
<% if @event_languages.empty? %>
<tr class='rowodd'>
<td colspan='4' align='center'>No Records Found</td>
<% end %>
<% if @event_languages.count >10 %>
<tr class='rowodd pagination'>
<td colspan='4' align='center'><%= will_paginate @event_languages, renderer: BootstrapPagination::Rails %>
</td>
<% end %>
</table>
